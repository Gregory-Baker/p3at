<?xml version="1.0"?>
<launch>

  <arg name="joy_dev" default="$(optenv P3AT_JOY_DEVICE /dev/input/js0)" />
  <arg name="joystick" default="true" />

  <group ns="joy_teleop">
  
    <node pkg="joy" type="joy_node" name="$(anon joy_node)">
        <rosparam command="load" file="$(find p3at_control)/config/joy_node.yaml" />
        <param name="dev" value="$(arg joy_dev)" />
    </node>

    <node pkg="teleop_twist_joy" type="teleop_node" name="$(anon teleop_twist_joy)">
        <rosparam command="load" file="$(find p3at_control)/config/teleop_twist_joy.yaml" />
    </node>
  </group>

</launch>
