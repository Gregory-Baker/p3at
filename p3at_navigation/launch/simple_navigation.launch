<?xml version="1.0"?>
<launch>
  <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_file)"/>

  <include file="$(find p3at_navigation)/launch/amcl.launch" />

  <node pkg="rviz" name="rviz" type="rviz" args="-d $(find p3at_viz)/rviz/scan.rviz"/>
  

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <rosparam file="$(find p3at_navigation)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find p3at_navigation)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />

    <rosparam file="$(find p3at_navigation)/params/map_nav_params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find p3at_navigation)/params/map_nav_params/local_costmap_params.yaml" command="load" />

    <rosparam file="$(find p3at_navigation)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find p3at_navigation)/params/move_base_params.yaml" command="load" />

    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <rosparam file="$(find p3at_navigation)/params/navfnros_planner.yaml" command="load" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>

    <remap from="odom" to="odometry/filtered" />

  </node>


</launch>
